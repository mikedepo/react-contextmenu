{
    "presets": [
        "react"
    ],
    "env": {
        "es6": {
            "presets": [
                [
                    "es2015",
                    {
                        "modules": false
                    }
                ]
            ],
            "plugins": [
                "transform-class-properties"
            ]
        },
        "es5": {
            "presets": [
                "es2015"
            ],
            "plugins": [
                "transform-class-properties"
            ]
        },
        "test": {
            "presets": [
                [
                    "env",
                    {
                        "targets": {
                            "node": "current"
                        }
                    }
                ]
            ],
            "plugins": [
                "transform-class-properties"
            ]
        }
    }
}
